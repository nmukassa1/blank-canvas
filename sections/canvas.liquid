<div class="h-screen grid place-items-center">
    <div>
    {% comment %} INSERT_YOUR_CODE {% endcomment %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-4xl" x-data="cart">
      <!-- Left Column: First Product -->
      <div class="bg-white rounded shadow p-6 flex flex-col items-center">
        {% assign first_product = collections.all.products.first %}
        {% if first_product %}
          <a href="{{ first_product.url }}">
            <img src="{{ first_product.featured_image | img_url: '400x400' }}" alt="{{ first_product.title }}" class="mb-4 rounded w-48 h-48 object-cover">
          </a>
          <h2 class="text-xl font-bold mb-2">{{ first_product.title }}</h2>
          <p class="text-gray-700 mb-4">
            {{ first_product.price | money }}
          </p>
          <form method="post" @submit.prevent="addToCart({{ first_product.variants.first.id }})">
            <input type="hidden" name="id" value="{{ first_product.variants.first.id }}">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
              Add to cart
            </button>
          </form>
        {% else %}
          <p>No products found.</p>
        {% endif %}
      </div>
      <!-- Right Column: Simple Cart -->
      <div class="bg-gray-50 rounded shadow p-6">
        <h2 class="text-xl font-bold mb-4">Cart</h2>
        {% comment %} Replace using Alpine.js {% endcomment %}


       <template x-if="cart.item_count > 0">
  <div>
    <ul>
      <template x-for="item in cart.items">
        <li>
          <span x-text="item.product_title"></span>
          <span x-text="'x ' + item.quantity"></span>
          <span x-text="item.line_price"></span>
        </li>
      </template>
    </ul>

    <div class="flex justify-between font-semibold mb-4">
      <span>Total:</span>
      <span x-text="cart.total_price"></span>
    </div>

    <a href="/cart" class="inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
      View Cart
    </a>

    <button @click="clearCart">Clear Cart</button>
  </div>
</template>


      </div>
    </div>
    </div>
</div>